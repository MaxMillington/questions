<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Hello. Please input the number of questions you need for your test</h1>

      <%= form_for(@quiz) do |f| %>

          <%= f.label :size %>
          <%= f.email_field :size, class: 'form-control' %>

          <br>
          <%= f.submit "Create Quiz", class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>